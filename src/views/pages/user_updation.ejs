<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- <title>Register</title> -->
</head>

<body>
    <form 
    id="my_form"
    method="POST"
    class="bg-gray-200 flex justify-center items-center h-full w-full">
        <div class="w-96 bg-white flex flex-col justify-center items-center gap-4 py-4 px-5 rounded-lg">
            <h1 class="font-bold text-xl">Update User Details</h1>

            <!-- error -->
            <p id="error_msg" class="text-lg text-red-500 font-semibold"></p>

            <div class="self-start w-full">
                <label for="email">Email:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-envelope text-gray-400 px-1"></i>
                    <input 
                        type="email" name="email" id="email" class="w-full px-2 py-1 outline-none" value="<%- data.email %>" readonly
                    >
                </div>
            </div>

            <div class="self-start w-full">
                <label for="name">Name:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-user text-gray-400 px-1"></i>
                    <input 
                        type="text" name="name" id="name" class="w-full px-2 py-1 outline-none"
                        <% if (data) { %>
                            value="<%- data.name || "" %>"
                        <% } %>
                    >
                </div>
            </div>

            <% if (data.is_admin) { %>
                <div class="self-start w-full">
                    <label for="name">Admin:</label>
                    <div class="flex flex-row items-center border rounded">
                        <i class="fa-solid fa-user-gear text-gray-400 px-1"></i>
                        <select name="admin" id="admin" class="w-full px-2 py-1 outline-none">
                            <% if (data.is_admin == 0) { %>
                                <option value="0" selected>No</option>
                                <option value="1">Yes</option>
                            <% } else { %>
                                <option value="0">No</option>
                                <option value="1" selected>Yes</option>
                            <% } %>                             
                        </select>
                    </div>
                </div>
            <% } %>

            <div class="self-start w-full">
                <label for="password">Password:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-lock text-gray-400 px-1"></i>
                    <input type="password" name="password" id="password" class="w-full px-2 py-1 outline-none">
                </div>
            </div>
            <div class="self-start w-full">
                <label for="c_passsword">Confirm Passsword:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-lock text-gray-400  px-1"></i>
                    <input type="password" id="c_password" name="c_password" class="w-full px-2 py-1 outline-none">
                </div>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white rounded py-0.5">Update</button>
        </div>
    </form>
</body>

<script type="module" src="/static/js/user_updation.js"></script>

</html>