<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- <title>Register</title> -->
</head>

<body>
    <form 
    id="my_form"
    action="/auth/register"
    method="POST"
    class="w-screen h-screen bg-gray-200 flex justify-center items-center">
        <div class="w-96 bg-white flex flex-col justify-center items-center gap-4 py-4 px-5 rounded-lg">
            <h1 class="font-bold text-2xl">Register</h1>

            <div class="self-start w-full">
                <label for="name">Name:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-user text-gray-400 px-1"></i>
                    <input 
                        type="text" name="name" id="name" class="w-full px-2 py-1 outline-none"
                    >
                </div>
            </div>
            <div class="self-start w-full">
                <label for="email">Email:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-envelope text-gray-400 px-1"></i>
                    <input 
                        type="email" name="email" id="email" class="w-full px-2 py-1 outline-none"
                    >
                </div>
            </div>
            <div class="self-start w-full">
                <label for="password">Password:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-lock text-gray-400 px-1"></i>
                    <input type="password" name="password" id="password" class="w-full px-2 py-1 outline-none">
                </div>
            </div>
            <div class="self-start w-full">
                <label for="c_passsword">Confirm Passsword:</label>
                <div class="flex flex-row items-center border rounded">
                    <i class="fa-solid fa-lock text-gray-400  px-1"></i>
                    <input type="password" id="c_passsword" name="c_passsword" class="w-full px-2 py-1 outline-none">
                </div>
            </div>
            <div class="w-full flex flex-row justify-between items-center">
                <p>Already have an account?</p>
                <a href="/auth/login" class="text-blue-500">login</a>
            </div>
            <button type="submit" class="w-full bg-blue-600 text-white rounded py-0.5">Register</button>
        </div>
    </form>
</body>

<!-- <script type="module" src="/static/js/register.js"></script> -->

</html>