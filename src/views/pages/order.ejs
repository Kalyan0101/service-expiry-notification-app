<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <section class="p-5 bg-gray-100">
        <!-- head -->
        <div class="flex justify-between items-center mb-5">
            <!-- search box -->
            <div class="flex justify-center items-center gap-1">
                <div class="border pl-3 rounded-lg bg-white">
                    <i class="fa-solid fa-magnifying-glass text-gray-400"></i>
                    <input type="text" name="search" id="search" placeholder="Search by order Id or number..."
                        class="w-[18rem] px-2 py-1 outline-none rounded-lg"
                        title="# prefix required to search via order id">
                </div>
                <p id="searchBy" class="text-gray-500"></p>
            </div>
            <a href="/order/create_order"
                class="bg-blue-500 text-white font-semibold py-1 px-3 rounded hover:bg-blue-600">
                <img width="24" height="24" src="https://img.icons8.com/windows/32/FFFFFF/plus-math.png" alt="plus-math"
                    class="inline" />
                Create Orders
            </a>
        </div>

        <!-- body -->
        <div class="w-full">
            <table class="w-full">
                <thead class="bg-red-500">
                    <tr class="font-bold bg-gray-200">
                        <td class="p-2">Order Id</td>
                        <td>Customer Name</td>
                        <td>Number</td>
                        <td>Purchased Date</td>
                        <td>Service</td>
                        <td>Sell By</td>
                        <td>Validity</td>
                        <td>Actions</td>
                    </tr>
                </thead>
                <tbody id="orderTableBody">

                </tbody>
            </table>
        </div>
    </section>
</body>

<script type="module" src="/static/js/order.js"></script>

</html>